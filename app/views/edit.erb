<h1> Welcome to the Edit Page</h1>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input id="name" type="text" name="article[name]" value="<%= @recipe.name %>" />
  <input id="ingredients" type="text" name="recipe[ingredients]"  value="<%= @recipe.ingredients %>">
  <input id="cook_time" type="text" name="recipe[cook_time]" value="<%= @recipe.cook_time %>" />
  <input type="submit" value="submit">
</form>